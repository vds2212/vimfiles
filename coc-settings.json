{
    "http.proxyStrictSSL": false,
    "diagnostic.errorSign": "⚡",
    "diagnostic.warningSign": "▲",
    "diagnostic.infoSign": "?",
    "diagnostic.hintSign": "!",
    "diagnostic.enable" : true,
    "diagnostic.virtualText" : true,
    "diagnostic.enableMessage": "never",
    "diagnostic.checkCurrentLine": true,

    "inlayHint.enable": true,
    "inlayHint.display" : false,

    "python.pythonPath": "C:\\Python39_x64\\python.exe",

    "python.linting.flake8Enabled": false,
    "python.linting.mypyEnabled": false,
    "python.linting.pylintEnabled": false,

    "python.formatting.provider": "black",
    "python.formatting.blackPath": "C:\\Python313_x64\\Scripts\\black.exe",

    "python.sortImports.path": "C:\\Python313_x64\\Scripts\\isort.exe",

    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        },
        "rust" : {
            "command" : "rust-analyzer",
            "filetypes" : ["rust"],
            "rootPatterns" : ["Cargo.toml"]
        }
    }
}
